<android.support.v7.widget.CardView
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    app:elevation="2dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kecamatan"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Movie Type"
            android:fontFamily="@font/hedley_regular"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/kelurahan"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Movie Type"
            android:fontFamily="@font/hedley_regular"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/kodepos"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_large"
            android:paddingRight="@dimen/card_padding_large"
            android:paddingBottom="4dp"
            tools:text="Movie Type"
            android:fontFamily="@font/hedley_regular"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end" />


    </LinearLayout>

</android.support.v7.widget.CardView>
